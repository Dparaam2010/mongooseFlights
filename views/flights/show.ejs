<%- include('../partials/header')%>

<h2>DEPATURE</h2>
<table>
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.airport %></td>
            <td><%= flight.flightNo</td>
            <td><%= flight.departs.toLocaleString() %></td>
        </tr>
    </tbody>
</table>
<br><br>

<h2>ARRIVALS</h2>
<% if (flight.destinations.length) { %>
    <table>
        <thead>
            <tr>
                <th>Airport</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            <% flight.destinations.forEach(function(dest) { %>
                <tr>
                    <td><%= dest.airport %></td>
                    <td><%= dest.arrival.toLocalesSting() %></td>
                </tr>
           <% }) %>
        </tbody>
    </table>
</thead>
    <tr>
        <th>Airport</th>
        <th>Arrival</th>
    </tr>
</thead>
<tbody>
    <% flight.destinations.forEach(function(dest){ %>
        <tr>
            <td><%= dest.airport %></td>
            <td><%= dest.arrival.toLocaleString() %></td>
        </tr>
    <% }) %>
</tbody>
</table>
<% } else { %>
    <h5>NO DESTINATIONS YET</h5>
<% } %>

<br><br>
<h3>ADD DESTINATION</h3>
<form action="/flights/<%= flight. id %>/destionations" method="POST">
    <label>Airport:
        <select name="airport" required>
            <option value="ATL">ATL - Atlanta International Airport</option>
            <option value="DA">DA - Denver international Airport</option>
            <option value="OIA">OIA - Orlando International Airport</option>
            <option value="PSH">PSH - phoenix Sky Harbor International Airport</option>
            <option value="JFK">JFK - John F. Kennedy International Airport</option>
    </select>
    </label><br>
    <label>Arrival:
        <input type="datatime-local" name="arrival" required>
    </label><br>
    <button type="submit">Add Destination</button>
</form>


<%- include('../partials/footer')%>