<%- include('../partials/header')%>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:
  <select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
    <option value="Delta">Delta</option>
  </select></label>
  <label>Airport:
  <select name="airport">
    <option value="SGVA">SGVA- San Gabriel Valley Airport</option>
    <option value="LB">LB-Long Beach Airport</option>
    <option value="OIA">OIA-Ontaria International Airport</option>
    <option value="LAX">LAX-Los Angeles International Aiport</option>
    <option value="SAN">SAN-San Diego international Airport</option>
  </select>
  </label><br>
  <label>Flight Number:
  <input type="number" name="flightNo" min="10" max="9999"></label><br>
  <label>Departs:
  <input type="datetime-local" name="departs" min="1900"></label><br> 
  <button type="submit">ADD Flight</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer')%>